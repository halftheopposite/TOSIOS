{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "module": "commonjs",
        "lib": ["dom", "es6"],
        "target": "es2016",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "strict": true,
        "composite": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "build"],
    "include": ["src/**/*.json", "src/**/*.ts"]
}
